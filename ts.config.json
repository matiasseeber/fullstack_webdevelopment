{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "suppressImplicitAnyIndexErrors": true,
        "ignoreDeprecations": "5.0",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "baseUrl": "./",
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/app.ts"
    ]
}