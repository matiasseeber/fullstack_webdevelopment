generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  teddys   teddys[]
}

model teddys {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  hex                String
  animal_image_url   String
  accesory_image_url String
  user_id            String @db.ObjectId
  user               users  @relation(fields: [user_id], references: [id])
}

model animals {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  image_url String
}

model accesories {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  image_url String
}
